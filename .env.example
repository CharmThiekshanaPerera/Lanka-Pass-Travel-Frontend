# ============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this file to create your environment files:
# - .env (default/development)
# - .env.local (local development with secrets)
# - .env.production (production deployment)
# ============================================

# ============================================
# API CONFIGURATION
# ============================================
# Main backend API URL
# Development: http://localhost:8000
# Production: https://13.212.50.145
VITE_API_URL=http://localhost:8000
# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from your Supabase project dashboard at https://supabase.com
# Supabase project URL
VITE_SUPABASE_URL=https://azrdrjbrwdahwnkuufvw.supabase.co
# Supabase anonymous public key
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# App name
VITE_APP_NAME=Lanka Pass Travel
# App version
VITE_APP_VERSION=1.0.0
# Environment: development, local, or production
VITE_ENVIRONMENT=development

# ============================================
# DEV SERVER CONFIGURATION
# ============================================
# Vite dev server port (not used in production builds)
VITE_DEV_PORT=8080
# Enable detailed logging (set to false in production)
VITE_DEBUG_MODE=true

# ============================================
# AUTHENTICATION CONFIGURATION
# ============================================
# Authentication session timeout in milliseconds (30 minutes)
VITE_SESSION_TIMEOUT=1800000
# Password reset token expiration in minutes
VITE_PASSWORD_RESET_EXPIRY=15
# Session warning time before timeout in milliseconds (5 minutes)
VITE_SESSION_WARNING_TIME=300000

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable admin panel features
VITE_ENABLE_ADMIN_PANEL=true
# Enable/disable vendor chat feature
VITE_ENABLE_VENDOR_CHAT=true
# Enable/disable analytics (set to true in production)
VITE_ENABLE_ANALYTICS=false

# ============================================
# SMS GATEWAY (Text.lk - Sri Lankan Gateway)
# ============================================
# Sender ID for SMS messages (non-sensitive, provided by Text.lk)
VITE_SMS_SENDER_ID=TextLKDemo

# ============================================
# THIRD-PARTY SERVICES (Optional)
# ============================================
# Google Analytics tracking ID
# VITE_ANALYTICS_ID=G-XXXXXXXXXX
# Sentry error tracking DSN
# VITE_SENTRY_DSN=https://key@sentry.io/project-id
# Stripe or other payment gateway API key
# VITE_PAYMENT_API_KEY=sk_test_... or sk_live_...
# Email service API key
# VITE_EMAIL_SERVICE_KEY=your-email-api-key

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Enable secure cookies (false for local dev, true for production)
VITE_SECURE_COOKIES=false
# Maximum file upload size in MB
VITE_MAX_FILE_UPLOAD_SIZE=50
# Allowed file types for uploads (comma-separated)
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xlsx

# ============================================
# PAGINATION & LIMITS
# ============================================
# Default items per page in data tables
VITE_ITEMS_PER_PAGE=10
# Maximum items per page allowed
VITE_MAX_ITEMS_PER_PAGE=100

# ============================================
# BROWSER CACHE CONFIGURATION
# ============================================
# LocalStorage key prefix to avoid conflicts with other apps
VITE_STORAGE_PREFIX=lptravel_

# ============================================
# PRODUCTION-ONLY CONFIGURATION
# ============================================
# (Only needed in .env.production)
# Enable Content Security Policy
# VITE_CSP_ENABLED=true
# CORS allowed origins (comma-separated)
# VITE_CORS_ORIGIN=https://lankapass.com,https://www.lankapass.com
# Enable API rate limiting
# VITE_RATE_LIMIT_ENABLED=true

# ============================================
# INSTRUCTIONS
# ============================================
# 1. Create a copy of this file:
#    - cp .env.example .env (for development)
#    - cp .env.example .env.local (for local secrets)
#    - cp .env.example .env.production (for production)
#
# 2. Fill in the actual values for your environment
#
# 3. IMPORTANT: Never commit .env or .env.local to version control
#    These files already in .gitignore
#
# 4. Share only .env.example with your team
#
# 5. For production deployment, set VITE_API_URL to the production API URL
#    and VITE_SUPABASE_URL to your production Supabase project URL
# ============================================
